<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AspectRatioFrameLayout">
        <attr name="resize_mode"/>
    </declare-styleable>

    <declare-styleable name="ExoVideoView">
        <attr name="resize_mode"/>
        <attr name="surface_type"/>
    </declare-styleable>

    <attr name="surface_type">
        <enum name="none" value="0"/>
        <enum name="surface_view" value="1"/>
        <enum name="texture_view" value="2"/>
    </attr>

    <attr name="resize_mode">
        <enum name="mode_fit" value="0"/>
        <enum name="mode_fixed_width" value="1"/>
        <enum name="mode_fixed_height" value="2"/>
        <enum name="mode_fill" value="3"/>
    </attr>
</resources>