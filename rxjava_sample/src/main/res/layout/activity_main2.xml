<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="my.beautycamera.Main2Activity">

    <android.support.constraint.Guideline
        android:id="@+id/guide_line_ver"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/guide_line_hor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp"/>

    <Button
        android:id="@+id/add_shortcut_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add shortcuts"
        app:layout_constraintLeft_toLeftOf="@id/guide_line_ver"
        app:layout_constraintTop_toTopOf="@id/guide_line_hor"/>

    <Button
        android:id="@+id/remove_shortcut_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="remove shortcuts"
        app:layout_constraintLeft_toLeftOf="@id/guide_line_ver"
        app:layout_constraintTop_toBottomOf="@+id/add_shortcut_button"/>
</android.support.constraint.ConstraintLayout>
